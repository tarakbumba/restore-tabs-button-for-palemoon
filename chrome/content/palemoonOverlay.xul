<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://restoretabsbutton/skin/overlay.css" type="text/css"?>

<!DOCTYPE overlay SYSTEM "chrome://restoretabsbutton/locale/prefwindow.dtd">

<overlay id="uctb-toolbar-overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <stringbundleset id="stringbundleset">
    <stringbundle
        id="bundle_restoretabsbutton"
        src="chrome://restoretabsbutton/locale/restoretabsbutton.properties" />
  </stringbundleset>

  <script type="application/x-javascript"
          src="chrome://restoretabsbutton/content/undo.js" />

  <keyset>
    <key id="uctb-key" modifiers="" key="" oncommand="undoCloseTab();"/>
  </keyset>

  <toolbarpalette id="BrowserToolbarPalette">
  <toolbarbutton id="uctb-toolbar-button"
    type="menu-button"
    label="&restoretabsbuttonToolbar.label;"
    tooltiptext="&restoretabsbuttonToolbar.label;"
    oncommand="undoClosedButt.onCommand();"
    context=""
    onclick="undoClosedButt.rightClickMenu(this, event);"
    class="toolbarbutton-1 chromeclass-toolbar-additional">
        <menupopup
          id="uctb-menu"
          placespopup="true"
          oncommand="event.stopPropagation();"
          tooltip="bhTooltip"
          onpopupshowing="undoClosedButt.populateUndoSubmenu(this);" />
  </toolbarbutton>
  </toolbarpalette>

  <popup id="contentAreaContextMenu">
    <menuitem id="uctb-contextentry" insertafter="context-stop" label="&undolastclosedtab.label;" oncommand="undoCloseTab();"/>
  </popup>

</overlay>
